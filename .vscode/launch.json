{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run SFML Project",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/cpp-sfml-project.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/build;${env:USERPROFILE}\DevTools\SFML\bin;${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:\\dev-tools\\mingw64\\bin\\gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Quick Build All"
        }
    ]
}