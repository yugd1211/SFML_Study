{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Setup MinGW",
            "type": "shell",
            "command": "where",
            "args": ["g++"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "where",
            "args": ["cmake"],
            "group": "build",
            "dependsOn": "Setup MinGW",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "echo",
            "args": ["Environment setup completed"],
            "group": "build",
            "dependsOn": "Install Dependencies",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                },
                "env": {
                    "PATH": "${env:PATH};${env:USERPROFILE}\\DevTools\\TDM-GCC-64\\bin;C:\\dev-tools\\mingw64\\bin;${env:USERPROFILE}\\DevTools\\cmake\\bin;C:\\dev-tools\\cmake\\bin"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                "-S",
                ".",
                "-B",
                "build"
            ],
            "group": "build",
            "dependsOn": "Setup Environment",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                },
                "env": {
                    "PATH": "${env:PATH};${env:USERPROFILE}\\DevTools\\TDM-GCC-64\\bin;C:\\dev-tools\\mingw64\\bin;${env:USERPROFILE}\\DevTools\\cmake\\bin;C:\\dev-tools\\cmake\\bin"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "group": "build",
            "dependsOn": "CMake Build",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                },
                "env": {
                    "PATH": "${env:PATH};${env:USERPROFILE}\\DevTools\\TDM-GCC-64\\bin;C:\\dev-tools\\mingw64\\bin;${env:USERPROFILE}\\DevTools\\cmake\\bin;C:\\dev-tools\\cmake\\bin"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run Project",
            "type": "shell",
            "command": "cd build && cpp-sfml-project.exe",
            "group": "test",
            "dependsOn": "Build Project",
            "problemMatcher": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/c"]
                },
                "env": {
                    "PATH": "${env:PATH};${env:USERPROFILE}\\DevTools\\TDM-GCC-64\\bin;C:\\dev-tools\\mingw64\\bin;${env:USERPROFILE}\\DevTools\\SFML\\bin;C:\\dev-tools\\sfml\\bin"
                }
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build All",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Setup MinGW",
                "Install Dependencies",
                "Setup Environment",
                "CMake Build",
                "Build Project",
                "Run Project"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}